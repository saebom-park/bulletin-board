<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.saebom.bulletinboard.admin.article.repository.AdminArticleMapper">

    <sql id="articleListColumns">
        a.id,
        a.title,
        a.view_count,
        a.created_at,
        a.status,
        m.username AS member_username,
        m.name AS member_name
    </sql>

    <sql id="articleDetailColumns">
        a.id,
        a.member_id,
        a.title,
        a.content,
        a.view_count,
        a.created_at,
        a.updated_at,
        a.status,
        a.admin_memo,
        a.admin_memo_updated_at,
        a.admin_memo_admin_id,
        m.username AS member_username,
        m.name AS member_name
    </sql>

    <resultMap id="articleListViewMap" type="com.saebom.bulletinboard.admin.article.dto.AdminArticleListView">
        <constructor>
            <idArg column="id" javaType="java.lang.Long"/>
            <arg column="title" javaType="java.lang.String"/>
            <arg column="view_count" javaType="java.lang.Integer"/>
            <arg column="created_at" javaType="java.time.LocalDateTime"/>
            <arg column="status"
                 javaType="com.saebom.bulletinboard.article.domain.ArticleStatus"
                 typeHandler="org.apache.ibatis.type.EnumTypeHandler"/>
            <arg column="member_username" javaType="java.lang.String"/>
            <arg column="member_name" javaType="java.lang.String"/>
        </constructor>
    </resultMap>

    <resultMap id="articleDetailViewMap" type="com.saebom.bulletinboard.admin.article.dto.AdminArticleDetailView">
        <constructor>
            <idArg column="id" javaType="java.lang.Long"/>
            <arg column="member_id" javaType="java.lang.Long"/>
            <arg column="title" javaType="java.lang.String"/>
            <arg column="content" javaType="java.lang.String"/>
            <arg column="view_count" javaType="java.lang.Integer"/>
            <arg column="created_at" javaType="java.time.LocalDateTime"/>
            <arg column="updated_at" javaType="java.time.LocalDateTime"/>
            <arg column="status"
                 javaType="com.saebom.bulletinboard.article.domain.ArticleStatus"
                 typeHandler="org.apache.ibatis.type.EnumTypeHandler"/>
            <arg column="admin_memo" javaType="java.lang.String"/>
            <arg column="admin_memo_updated_at" javaType="java.time.LocalDateTime"/>
            <arg column="admin_memo_admin_id" javaType="java.lang.Long"/>
            <arg column="member_username" javaType="java.lang.String"/>
            <arg column="member_name" javaType="java.lang.String"/>
        </constructor>
    </resultMap>

    <select id="selectList"
            resultMap="articleListViewMap">
        SELECT
        <include refid="articleListColumns"/>
        FROM articles a
        JOIN members m ON a.member_id = m.id
        ORDER BY a.created_at DESC
    </select>

    <select id="selectDetailById"
            resultMap="articleDetailViewMap">
        SELECT
        <include refid="articleDetailColumns"/>
        FROM articles a
        JOIN members m ON a.member_id = m.id
        WHERE a.id = #{id}
    </select>

    <update id="updateStatusById">
        UPDATE articles
        SET
            status = #{status},
            admin_memo = #{adminMemo},
            admin_memo_updated_at = NOW(),
            admin_memo_admin_id = #{adminId}
        WHERE id = #{id}
    </update>

</mapper>