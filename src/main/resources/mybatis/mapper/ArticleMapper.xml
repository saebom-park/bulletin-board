<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.saebom.bulletinboard.repository.ArticleMapper">

    <sql id="articleBaseColumns">
        a.id,
        a.member_id,
        a.title,
        a.content,
        a.view_count,
        a.created_at,
        a.updated_at
    </sql>

    <sql id="articleAuthorColumns">
        m.username AS member_username,
        m.name AS member_name
    </sql>

    <resultMap id="articleDtoResultMap" type="com.saebom.bulletinboard.dto.article.ArticleDto">
        <id property="id" column="id"/>
        <result property="memberId" column="member_id"/>
        <result property="title" column="title"/>
        <result property="content" column="content"/>
        <result property="viewCount" column="view_count"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
        <result property="memberUsername" column="member_username"/>
        <result property="memberName" column="member_name"/>
    </resultMap>

    <insert id="insert"
            useGeneratedKeys="true"
            keyProperty="id">
        INSERT INTO articles (
            member_id,
            title,
            content,
            view_count
        )
        VALUES (
            #{memberId},
            #{title},
            #{content},
            #{viewCount}
        )
    </insert>

    <select id="findDomainById"
            resultType="com.saebom.bulletinboard.domain.Article">
        SELECT
        <include refid="articleBaseColumns"/>
        FROM articles a
        WHERE a.id = #{id}
    </select>

    <select id="findById"
            resultMap="articleDtoResultMap">
        SELECT
        <include refid="articleBaseColumns"/>,
        <include refid="articleAuthorColumns"/>
        FROM articles a
        JOIN members m ON a.member_id = m.id
        WHERE a.id = #{id}
    </select>

    <select id="findAll"
            resultMap="articleDtoResultMap">
        SELECT
        <include refid="articleBaseColumns"/>,
        <include refid="articleAuthorColumns"/>
        FROM articles a
        JOIN members m ON a.member_id = m.id
        ORDER BY a.created_at DESC
    </select>

    <select id="findByMemberId"
            resultMap="articleDtoResultMap">
        SELECT
        <include refid="articleBaseColumns"/>,
        <include refid="articleAuthorColumns"/>
        FROM articles a
        JOIN members m ON a.member_id = m.id
        WHERE a.member_id = #{memberId}
    </select>

    <update id="update">
        UPDATE articles a
        SET
            a.title = #{title},
            a.content = #{content}
        WHERE a.id = #{id}
    </update>

    <delete id="deleteById">
        DELETE FROM articles a
        WHERE a.id = #{id}
    </delete>

    <update id="increaseViewCount">
        UPDATE articles a
        SET
            a.view_count = a.view_count + 1
        WHERE a.id = #{id}
    </update>

</mapper>