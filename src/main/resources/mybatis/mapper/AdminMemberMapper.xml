<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.saebom.bulletinboard.repository.AdminMemberMapper">

    <sql id="adminMemberColumns">
        id,
        username,
        name,
        email,
        role,
        status,
        created_at,
        updated_at
    </sql>

    <resultMap id="adminMemberResultMap" type="com.saebom.bulletinboard.dto.admin.AdminMemberDto">
        <constructor>
            <idArg column="id" javaType="java.lang.Long"/>
            <arg column="username" javaType="java.lang.String"/>
            <arg column="name" javaType="java.lang.String"/>
            <arg column="email" javaType="java.lang.String"/>
            <arg column="role" javaType="java.lang.String"/>
            <arg column="status"
                    javaType="com.saebom.bulletinboard.domain.Status"
                    typeHandler="org.apache.ibatis.type.EnumTypeHandler"/>
            <arg column="created_at" javaType="java.time.LocalDateTime"/>
            <arg column="updated_at" javaType="java.time.LocalDateTime"/>
        </constructor>
    </resultMap>

    <select id="findAll"
            resultMap="adminMemberResultMap">
        SELECT
        <include refid="adminMemberColumns"/>
        FROM members
        ORDER BY id DESC
    </select>

    <update id="updateStatus">
        UPDATE members
        SET status = #{status}
        WHERE id = #{id}
    </update>
</mapper>